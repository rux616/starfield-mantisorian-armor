{
  "version": "2.0.0",
  "options": {
    "shell": {
      "executable": "pwsh.exe",
      "args": ["-ExecutionPolicy", "Bypass", "-Command"]
    },
    "cwd": "${workspaceFolder}"
  },
  "tasks": [
    {
      "label": "Create Archives",
      "type": "shell",
      "command": ". ./support/scripts/version-class.ps1; Compress-Archive -Path ./data -DestinationPath ./builds/Mantisorian_Armor_v$version.zip -CompressionLevel Optimal -Force; Compress-Archive -Path ./support/textures/*.pdn -DestinationPath ./builds/Mantisorian_Armor_Assets_v$version.zip -CompressionLevel Optimal -Force",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOrder": "sequence",
      "dependsOn": [
        "Update Versions",
        "Render Markdown to Nexus BBCode",
        "Render Markdown to Plaintext"
      ]
    },
    {
      "label": "Render Markdown to Nexus BBCode",
      "type": "shell",
      "command": "./support/scripts/markdown-to-nexusbbcode.ps1",
      "args": ["./support/docs/README.md"]
    },
    {
      "label": "Render Markdown to Plaintext",
      "type": "shell",
      "command": "./support/scripts/markdown-to-plaintext.ps1",
      "args": ["./support/docs/README.md", "./support/docs/CHANGELOG.md"]
    },
    {
      "label": "Update Versions",
      "type": "shell",
      "command": "./support/scripts/version-updater.ps1"
    }
  ]
}
